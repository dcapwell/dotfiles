#!/usr/bin/env bash

#set -o xtrace
set -o errexit
set -o pipefail
set -o nounset

bin="$(cd "$(dirname "$0")" > /dev/null; pwd)"

_main() {
  local -r branch="$1"
  local default_remote
  default_remote="$(git config --local --get branch."${branch}".remote)"
  local -r remote="${2:-${default_remote}}"
  git checkout "$branch"
  git pull --rebase "$remote" "$branch"
}

_main "$@"
