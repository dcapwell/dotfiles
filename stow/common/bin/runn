#!/bin/bash
# Run a command N times sequentially
# Usage: runn N command [args...]

set -e

if [[ $# -lt 2 ]]; then
  echo "Usage: runn N command [args...]" >&2
  exit 1
fi

if [[ "$1" == *[!0-9]* ]]; then
  echo "Error: first argument must be a number" >&2
  exit 1
fi

n="$1"
shift

for ((i = 1; i <= n; i++)); do
  "$@"
done
